<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/fl_timer_container"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <TextView
        android:id="@+id/tv_timer_timer"
        style="@style/Theme.Reap.Timer"
        tools:text="00:00"/>

    <ImageView
        android:id="@+id/iv_timer_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/icon_content_description"
        android:scaleType="centerInside"
        android:src="@drawable/no_activity_icon"/>

    <!-- TODO Andrew's custom view -->

    <include
        android:id="@+id/ol_timer_break"
        layout="@layout/overlay_timer_break"
        android:visibility="gone"/>

    <include
        android:id="@+id/ol_timer_pause"
        layout="@layout/overlay_timer_pause"
        android:visibility="gone"/>

</FrameLayout>