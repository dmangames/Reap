<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_pxportrait_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sand"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:weightSum="100">

    <ImageView
        android:id="@+id/iv_pxportrait_large"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"/>

    <TextView
        android:id="@+id/tv_pxportrait_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:textAppearance="@style/TextAppearance.Reap"
        android:textSize="20sp"
        tools:text="Reading"/>

    <TextView
        android:id="@+id/tv_pxportrait_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Reap"
        android:textSize="16sp"
        tools:text="100/10,000 hours (1%)"/>

</LinearLayout>