<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:clickable="true"
             android:orientation="vertical">

    <TextView
        android:id="@+id/tv_poverlay_timer"
        style="@style/Theme.Reap.Timer"
        tools:text="00:00"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/iv_poverlay_pause"
            style="@style/Theme.Reap.PauseOverlay.Button"
            android:src="@drawable/pause"
            />

        <ImageView
            android:id="@+id/iv_poverlay_switch"
            style="@style/Theme.Reap.PauseOverlay.Button"
            android:src="@drawable/switch_activity"
            />
    </LinearLayout>
</FrameLayout>