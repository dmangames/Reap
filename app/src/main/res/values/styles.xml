<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Theme.Reap" parent="AppTheme"/>

    <style name="TextAppearance.Reap" parent="TextAppearance.AppCompat"/>

    <style name="Theme.Reap.Timer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/timer_padding</item>
        <item name="android:paddingBottom">@dimen/timer_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.Reap.Timer</item>
    </style>

    <style name="TextAppearance.Reap.Timer">
        <item name="android:textSize">@dimen/timer_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Reap.Icon">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:padding">@dimen/timer_image_padding</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Theme.Reap.Icon.Clickable">
        <item name="android:background">@drawable/clickable_grey</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.Reap.PauseOverlay.Button" parent="Theme.Reap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">50</item>
        <item name="android:background">@drawable/clickable_grey</item>
        <item name="android:paddingTop">@dimen/pause_padding</item>
        <item name="android:paddingBottom">@dimen/pause_padding</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextAppearance.Reap.ListItem">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
