<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Reap" parent="AppTheme"/>
    <style name="TextAppearance.Reap" parent="TextAppearance.AppCompat"/>

    <style name="Theme.Reap.Timer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/timer_padding</item>
        <item name="android:paddingBottom">@dimen/timer_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.Reap.Timer</item>
    </style>

    <style name="TextAppearance.Reap.Timer">
        <item name="android:textSize">@dimen/timer_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Reap.ListItem">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
